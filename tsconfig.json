{
  // https://nuxt.com/docs/guide/concepts/typescript
  "extends": "./.nuxt/tsconfig.json",
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "esnext",
    "module": "esnext",
    "baseUrl": ".",
    "paths": {
      "~/*": ["./*"],
      "@/*": ["./*"]
    },
    "types": ["element-plus/global","@types/node", "@nuxt/types"]
  },
  "include": [
    "nuxt.config.ts",
    "composables/**/*.ts",
    "layouts/**/*.vue",
    "components/**/*.vue",
    "pages/**/*.vue",
    "plugins/**/*.ts",
    "store/**/*.ts"
  ]
}
